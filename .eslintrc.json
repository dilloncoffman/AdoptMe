{
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "prettier",
    "prettier/react"
  ],
  "rules": {
    "react/prop-types": 0,
    "no-console": 1,
    "react-hooks/rules-of-hooks": 2,
    "react-hooks/exhaustive-deps": 1
  },
  "plugins": ["react", "import", "jsx-a11y", "react-hooks"],
  "parserOptions": {
    "ecmaVersion": 2018, // ES6 async/await
    "sourceType": "module", // import/export ES modules
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    // Defining global variables
    "es6": true,
    "browser": true, // setTimeout, document, window
    "node": true // http/require
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
